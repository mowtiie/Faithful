<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="Appearance"
        app:iconSpaceReserved="false">

        <ListPreference
            android:key="theme"
            android:title="@string/setting_list_theme"
            app:iconSpaceReserved="false"/>

        <ListPreference
            android:key="contrast"
            android:title="@string/setting_list_contrast"
            app:iconSpaceReserved="false"/>

        <ListPreference
            android:key="timestamp"
            android:title="@string/setting_list_timestamp"
            app:iconSpaceReserved="false"/>

        <SwitchPreferenceCompat
            android:key="dynamic_colors"
            android:widgetLayout="@layout/view_setting_switch"
            app:iconSpaceReserved="false"
            android:title="@string/setting_switch_dynamic_colors_title"
            android:summary="@string/setting_switch_dynamic_colors_summary"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="Security &amp; Privacy"
        app:iconSpaceReserved="false">

        <SwitchPreferenceCompat
            app:iconSpaceReserved="false"
            android:key="screen_privacy"
            android:title="@string/setting_switch_screen_privacy_title"
            android:summary="@string/setting_switch_screen_privacy_summary"
            android:widgetLayout="@layout/view_setting_switch"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="Backup &amp; Restore"
        app:iconSpaceReserved="false">

        <Preference
            android:key="import"
            app:iconSpaceReserved="false"
            android:title="@string/setting_import_title"
            android:summary="@string/setting_import_summary"/>

        <Preference
            android:key="export"
            app:iconSpaceReserved="false"
            android:title="@string/setting_export_title"
            android:summary="@string/setting_export_summary"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="About"
        app:iconSpaceReserved="false">

        <Preference
            android:key="app_license"
            app:iconSpaceReserved="false"
            android:title="@string/preference_app_license"
            android:summary="@string/app_license"/>

        <Preference
            android:key="app_source_code"
            app:iconSpaceReserved="false"
            android:title="@string/preference_app_source_code_title"
            android:summary="@string/preference_app_source_code_summary">

            <intent
                android:action="android.intent.action.VIEW"
                android:data="@string/link_app_source_code"/>
        </Preference>

        <Preference
            android:key="app_author"
            app:iconSpaceReserved="false"
            android:title="@string/preference_app_author"
            android:summary="@string/app_author">

            <intent
                android:action="android.intent.action.VIEW"
                android:data="@string/link_app_author"/>
        </Preference>

        <Preference
            android:key="app_version"
            app:iconSpaceReserved="false"
            android:title="@string/preference_app_version"/>
    </PreferenceCategory>
</PreferenceScreen>